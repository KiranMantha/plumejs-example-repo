{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "target": "es2015",
        "moduleResolution": "node",
        "module": "esnext",
        "lib": [
            "es2017",
            "dom"
        ],
        "importHelpers": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true, 
        "sourceMap": true,
        "skipLibCheck": true,
        "typeRoots": [
            "@types",
            "node_modules/@types"
        ]
    }
}