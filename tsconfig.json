{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "target": "es2015",
        "moduleResolution": "node",
        "module": "commonjs",
        "plugins": [
            {
                "transform": ".node_modules/@plumejs/core/simple-transformer.ts",
                "type": "raw",
                "after": false
            }
        ],
        "importHelpers": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "inlineSourceMap": true,
        "skipLibCheck": true,
        "typeRoots": [
            "@types",
            "node_modules/@types"
        ]
    }
}