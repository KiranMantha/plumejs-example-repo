{
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": "./",
        "target": "es2015",
        "moduleResolution": "node",
        "module": "esnext",
        "lib": [
            "dom",
            "es2015",
            "es2015.promise"
        ],
        "importHelpers": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true, 
        "sourceMap": true,
        "skipLibCheck": true,
        "typeRoots": [
            "@types",
            "node_modules/@types"
        ]
    },
    "exclude": ["node_modules"]
}